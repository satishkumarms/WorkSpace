		Department dept = new Department("IOT");
		Session session = sf.openSession();
	    
		session.getTransaction().begin();
		 session.save(dept);
		Query query = session.createQuery("select emp from Employee where emp.empId=?");
	    Employee emp = (Employee) query.setParameter(0, 1L);
	    emp.setDepId(dept.getDepId());
	
	    session.save(emp);
		
	
		
		/*Query query = session.createQuery("select emp.address.city from Employee emp where emp.empId=?");
	
		query.setParameter(0, 1L)
	/*	session.save(emp1);*/
		
		session.getTransaction().commit();
		
		
		
		
